<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="mathTeacher" class="com.learning.loosecoupling.MathTeacher"/>
    <bean id="scienceTeacher" class="com.learning.loosecoupling.ScienceTeacher"/>

    <bean id="student" class="com.learning.loosecoupling.Student">
        <property name="teacher" ref="scienceTeacher"/>
    </bean>

</beans>